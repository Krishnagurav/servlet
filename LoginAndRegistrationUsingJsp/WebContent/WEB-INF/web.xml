<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>LoginAndRegistrationUsingJsp</display-name>
	<servlet>
	
		<servlet-name>Registration</servlet-name>
		<servlet-class>com.bridgelab.controller.Registration</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	
	
		<servlet>
	
		<servlet-name>Logout1</servlet-name>
		<servlet-class>com.bridgelab.controller.Logout1</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout1</servlet-name>
		<url-pattern>/logout1</url-pattern>
	</servlet-mapping>



	<filter>
		<filter-name>AboutFilter</filter-name>
		<filter-class>com.bridgelab.controller.Athentication</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AboutFilter</filter-name>
		<url-pattern>/about.jsp</url-pattern>
	</filter-mapping>  
	
	
	<filter>
		<filter-name>LoginFilter1</filter-name>
		<filter-class>com.bridgelab.controller.Athentication</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>LoginFilter1</filter-name>
		<url-pattern>/LoginSuccess.jsp</url-pattern>
	</filter-mapping>  

	
	
	</web-app>
	
